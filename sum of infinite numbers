public class InfiniteSum {
    public static void main(String[] args) {
        int limit = 1000; // Change this to the desired limit
        double sum = 0.0;

        for (int i = 1; i <= limit; i++) {
            sum += 1.0 / i;
        }

        System.out.println("Sum of the first " + limit + " numbers: " + sum);
    }
}
